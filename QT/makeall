#! /bin/sh

sed "s/warn_on debug/warn_on release/" LDView.pro > LDView.release.pro
mv LDView.release.pro LDView.pro
if [ -x $QTDIR/bin/qmake ] ; then
	$QTDIR/bin/qmake
else
	qmake
fi
rm -f LDView
if [ -d $QTDIR/include/Qt3Support ] ; then
	export TESTING="-DQT3_SUPPORT -I$QTDIR/include/Qt"
elif [ -d /usr/include/qt3 ] ; then
	export TESTING="-I/usr/include/qt3"
fi
make -f LDView.mak all
if [ "$1" = "-s" ]; then
	strip LDView;
fi
